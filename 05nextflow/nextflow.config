// Nextflow配置文件

// 进程默认配置
process {
    // 默认执行器
    executor = 'local'
    
    // 默认资源配置
    cpus = 4
    memory = '8 GB'
    time = '2h'
    
    // 错误处理策略
    errorStrategy = 'retry'
    maxRetries = 2
    
    // 特定进程配置
    withName: perfAnalysisDisc {
        cpus = { params.threads }
        memory = { params.memory }
        time = '4h'
    }
    
    withName: perfAnalysisBlib {
        cpus = { params.threads }
        memory = { params.memory }
        time = '2h'
    }
    
    withName: perfAnalysisScan {
        cpus = { params.threads }
        memory = { params.memory }
        time = '6h'
    }
    
    withName: perfRecord {
        cpus = { params.threads }
        memory = { params.memory }
        time = '4h'
    }
}

// 工作目录配置
workDir = './work'

// 报告配置
report {
    enabled = true
    file = "${params.outdir}/reports/execution_report.html"
}

timeline {
    enabled = true
    file = "${params.outdir}/reports/timeline.html"
}

trace {
    enabled = true
    file = "${params.outdir}/reports/trace.txt"
}

dag {
    enabled = true
    file = "${params.outdir}/reports/flowchart.html"
}

// 配置profiles
profiles {
    // 标准配置（默认）
    standard {
        process.executor = 'local'
    }
    
    // 集群配置示例（SLURM）
    cluster {
        process {
            executor = 'slurm'
            queue = 'normal'
            clusterOptions = '--account=your_account'
        }
    }
    
    // Docker配置
    docker {
        docker.enabled = true
        process.container = 'ubuntu:20.04'
    }
    
    // 调试配置
    debug {
        process {
            errorStrategy = 'terminate'
            beforeScript = 'echo "Starting process: $task.name"'
            afterScript = 'echo "Completed process: $task.name"'
        }
        trace.enabled = true
    }
}
